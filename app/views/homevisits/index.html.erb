<h1 class='text-center'>Homevisits Index</h1>
<ol><% @clients.each do |client| %>
  <li><strong><%= client.name %></strong></li>
    <% client.homevisits.all.each do |homevisit| %>
      <ul class='list-unstyled'><li><%= homevisit.departure_date %> - <%= homevisit.return_date %> Homevisit length: <%= homevisit.days %> <%= link_to 'Edit Homevisit', edit_client_homevisit_path(client, homevisit) %> <%= link_to 'Delete Homevisit', homevisit_path(homevisit), method: :delete %></li></ul>
    <% end %>
  <% end %></ol>
